<!-- Doctype HTML5 -->
<!doctype html>
<html lang="{{ app.request.locale }}" xmlns="http://www.w3.org/1999/xhtml" dir="ltr">
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        {# GOOGLE TAG MANAGER #}
        {% if app.environment is same as("prod") and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_ARTIST') %}
            <!-- Google Tag Manager -->
            <script>(function (w, d, s, l, i) {
                w[l] = w[l] || [];
                w[l].push({
                  'gtm.start':
                    new Date().getTime(), event: 'gtm.js'
                });
                var f = d.getElementsByTagName(s)[0],
                  j = d.createElement(s), dl = l != 'dataLayer' ? '&l=' + l : '';
                j.async = true;
                j.src =
                  'https://www.googletagmanager.com/gtm.js?id=' + i + dl;
                f.parentNode.insertBefore(j, f);
              })(window, document, 'script', 'dataLayer', 'GTM-NR84CV');</script>
            <!-- End Google Tag Manager -->
        {% endif %}

        {# PAGE TITLE #}
        <title>{% block pagetitle %}{{ 'base.meta.title'|trans }}{% endblock %}</title>

        {# PAGE DESCRIPTION #}
        {% block description %}
            <meta name="description" content="{{ 'base.meta.description'|trans }}">
        {% endblock %}

        <meta name="keywords" content="{% block keywords %}{{ 'base.meta.keywords'|trans }}{% endblock %}">
        <meta name="author" content="Barthy">

        <meta property="og:type" content="website"/>
        <meta property="og:title" content="{{ block('pagetitle') }}">
        <meta property="og:site_name" content="{{ 'mwb'|trans }}"/>

        {% block og_image %}
            <meta property="og:image" content="https://www.keinegrenzen.org{{ asset('bundles/app/images/logo_og.png') }}">
            <meta property="og:image:width" content="1000"/>
            <meta property="og:image:height" content="1000"/>
        {% endblock %}

        {% block og_description %}
            <meta property="og:description" content="{{ 'base.meta.description'|trans }}">
        {% endblock %}

        <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('bundles/app/images/favicons/apple-touch-icon.png') }}">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ asset('bundles/app/images/favicons/favicon-32x32.png') }}">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ asset('bundles/app/images/favicons/favicon-16x16.png') }}">
        <link rel="manifest" href="{{ asset('bundles/app/images/favicons/manifest.json') }}">
        <link rel="mask-icon" href="{{ asset('bundles/app/images/favicons/safari-pinned-tab.svg') }}" color="#0099ff">
        <meta name="apple-mobile-web-app-title" content="keinegrenzen">
        <meta name="application-name" content="keinegrenzen">
        <meta name="theme-color" content="#ffffff">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('assets/vendor/font-awesome/css/font-awesome.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('bundles/app/dist/css/style.min.css') }}"/>
        {% endblock %}

        <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
        <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
        <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->
    </head>
    <body class="{{ (not is_mobile())?'sr-enabled':'' }}" {% block bodyschema %}{% endblock %}>
        {% if app.environment is same as("prod") and not is_granted('ROLE_ADMIN') and not is_granted('ROLE_ARTIST') %}
            <!-- Google Tag Manager (noscript) -->
            <noscript>
                <iframe src="https://www.googletagmanager.com/ns.html?id=GTM-NR84CV"
                        height="0" width="0" style="display:none;visibility:hidden"></iframe>
            </noscript>
            <!-- End Google Tag Manager (noscript) -->
        {% endif %}
        <noscript>{{ 'noscript'|trans }}</noscript>

        {% block body %}{% endblock %}

        {% block javascripts %}
            <script src="{{ asset('assets/vendor/jquery/dist/jquery.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('assets/vendor/scrollreveal/dist/scrollreveal.min.js') }}"
                    type="text/javascript"></script>
            <script src="{{ asset('assets/vendor/popper.js/dist/umd/popper.min.js') }}" type="text/javascript"></script>
            <script src="{{ asset('assets/vendor/bootstrap/dist/js/bootstrap.min.js') }}"
                    type="text/javascript"></script>
            <script src="{{ asset('bundles/app/dist/js/theme.min.js') }}" type="text/javascript"></script>
        {% endblock %}
    </body>
</html>