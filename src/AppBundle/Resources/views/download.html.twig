{% extends 'AppBundle::base.html.twig' %}

{% block pagetitle %}{{ 'download'|trans }} | {{ 'base.meta.title'|trans }}{% endblock %}

{% block bodyclass %}download{% endblock %}

{% block stylesheets %}
    {% stylesheets
    'bundles/app/css/download.css' filter='cssrewrite' %}
    <link rel="stylesheet" href="{{ asset_url }}" />
    {% endstylesheets %}
    {{ parent() }}
{% endblock %}

{% block body %}
    <div id="fb-root"></div>
    <script src="{{ asset('bundles/app/js/fb.js') }}"></script>
    <script src="{{ asset('bundles/app/js/tw.js') }}"></script>
    {% include 'AppBundle::nav.html.twig' with {'index': false} %}
    <div class="container-fluid fill-height main">
        <div class="middle">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <h1>{{ 'thankyou.h1'|trans }}</h1>
                    <br>
                    <p>{{ 'thankyou.p'|trans|nl2br }}</p>
                    <div class="share-btns">
                        <div class="fb-share-button" data-href="http://music-without-borders.de" data-layout="button" data-size="large" data-mobile-iframe="true"><a class="fb-xfbml-parse-ignore" target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=http%3A%2F%2Fmusic-without-borders.de%2F&amp;src=sdkpreparse">Teilen</a></div>
                        <a id="share-tw" href="https://twitter.com/intent/tweet" data-text="{{ 'twitter.text'|trans }}" data-url="null" class="twitter-share-button btn btn-primary" data-size="large"><i class="fa fa-twitter fa-fw"></i> {{ 'share.tw'|trans }}</a>
                        <a class="btn btn-primary" rel="nofollow" href="#albums">{{ 'thankyou.a'|trans }}</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="container albums" id="albums">
        <div class="row">
            {% for album in donation.albums %}
                <div class="col-lg-6">
                    <div class="album">
                        <div class="cover">
                            <img src="{{ web_image(album.cover.webPath) }}">
                        </div>
                        <div>
                            <p><b>{{ album.title }}</b></p>
                            <p>{{ album.artist }}</p>
                            {% if album.albumFile is not null %}
                                <a href="/{{ album.albumFile.webPath }}" class="btn btn-primary">{{ 'download'|trans }}</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    {% include '@App/footer.html.twig' %}
{% endblock %}

{% block bodyscripts %}
    {{ parent() }}
    {% javascripts
    '@AppBundle/Resources/public/js/download.js'
    %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
{% endblock %}