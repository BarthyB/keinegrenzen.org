{% extends 'AppBundle::base.html.twig' %}

{% block body %}
    <div class="container w-100 h-100 py-5">
        <div class="row justify-content-center py-2">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4 text-center">
                <h1>Einloggen</h1>
            </div>
        </div>
        <div class="row justify-content-center py-2">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                {% if error %}
                    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            </div>
        </div>
        <div class="row justify-content-center py-2">
            <div class="col-xs-12 col-sm-12 col-md-6 col-lg-4">
                <form action="{{ path('login') }}" method="post">
                    <div class="form-group">
                        <label for="username">Name:</label>
                        <input class="form-control" type="text" id="username" name="_username"
                               value="{{ last_username }}"/>
                    </div>
                    <div class="form-group">
                        <label for="password">Passwort:</label>
                        <input class="form-control" type="password" id="password" name="_password"/>
                    </div>
                    <input type="hidden" name="_target_path" value="/checkrole"/>
                    <div class="form-group">
                        <button class="btn btn-green" type="submit">login</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}