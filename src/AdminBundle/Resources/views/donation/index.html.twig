{% trans_default_domain 'admin' %}

    {% extends 'AdminBundle::base.html.twig' %}

    {% block body %}

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Donations</h1>
                </div>
            </div>

            <div class="row my-2">
                <div class="col-lg-12">
                    <a class="btn btn-success" href="{{ path('admin_donation_new') }}">
                        {{ 'create_new'|trans({'entity': 'donation'}) }}
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Date</th>
                            <th scope="col">Amount</th>
                            <th scope="col">Name</th>
                            <th scope="col">{{ 'actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for donation in donations %}
                            <tr>
                                <td>
                                    {{ donation.id }}
                                </td>
                                <td>{% if donation.date %}{{ donation.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                                <td>{{ donation.amount }}</td>
                                <td>{{ donation.name }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-warning"
                                           href="{{ path('admin_donation_edit', { 'id': donation.id }) }}">{{ 'edit'|trans }}</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row my-2">
                <div class="col-lg-12">
                    <a class="btn btn-success" href="{{ path('admin_donation_new') }}">
                        {{ 'create_new'|trans({'entity': 'donation'}) }}
                    </a>
                </div>
            </div>
        </div>

    {% endblock %}
