{% trans_default_domain 'admin' %}

    {% extends 'AdminBundle::base.html.twig' %}

    {% block body %}

        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Profiles</h1>
                </div>
            </div>

            <div class="row my-2">
                <div class="col-lg-12">
                    <a class="btn btn-success" href="{{ path('admin_profile_new') }}">
                        {{ 'create_new'|trans({'entity': 'profile'}) }}
                    </a>
                </div>
            </div>
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-bordered table-striped table-hover">
                        <thead class="thead-dark">
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Name</th>
                            <th scope="col">Shortname</th>
                            <th scope="col">Location</th>
                            <th scope="col">Genre</th>
                            <th scope="col">Description</th>
                            <th scope="col">Quotes</th>
                            <th scope="col">Metadescription</th>
                            <th scope="col">Bannervideopath</th>
                            <th scope="col">Youtubelink</th>
                            <th scope="col">Public</th>
                            <th scope="col">Uurl</th>
                            <th scope="col">{{ 'actions'|trans }}</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for profile in profiles %}
                            <tr>
                                <td>
                                    <a href="{{ path('profile_show', { 'UURL': profile.uURL }) }}">{{ profile.id }}</a>
                                </td>
                                <td>{{ profile.name }}</td>
                                <td>{{ profile.shortName }}</td>
                                <td>{{ profile.location }}</td>
                                <td>{{ profile.genre }}</td>
                                <td>{{ profile.description }}</td>
                                <td>{{ profile.quotes }}</td>
                                <td>{{ profile.metaDescription }}</td>
                                <td>{{ profile.bannerVideoPath }}</td>
                                <td>{{ profile.youtubeLink }}</td>
                                <td>{% if profile.public %}<span
                                            class="badge badge-success">{{ 'true'|trans }}</span>{% else %}<span
                                            class="badge badge-danger">{{ 'false'|trans }}</span>{% endif %}</td>
                                <td>{{ profile.UURL }}</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-primary"
                                           href="{{ path('profile_show', { 'UURL': profile.uURL }) }}">{{ 'show'|trans }}</a>
                                        <a class="btn btn-warning"
                                           href="{{ path('admin_profile_edit', { 'id': profile.id }) }}">{{ 'edit'|trans }}</a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="row my-2">
                <div class="col-lg-12">
                    <a class="btn btn-success" href="{{ path('admin_profile_new') }}">
                        {{ 'create_new'|trans({'entity': 'profile'}) }}
                    </a>
                </div>
            </div>
        </div>

    {% endblock %}
